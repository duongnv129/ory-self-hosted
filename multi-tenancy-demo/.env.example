# Storage Persistence Configuration
# Set ENABLE_STORAGE_PERSISTENCE=true to enable file-based persistence

# Enable or disable storage persistence
ENABLE_STORAGE_PERSISTENCE=false

# Storage configuration (only used when persistence is enabled)
STORAGE_DATA_DIR=./data
STORAGE_FILE_PATH=./data/storage.json
STORAGE_BACKUP_DIR=./data/backups
STORAGE_MAX_BACKUPS=10
STORAGE_AUTO_SAVE_INTERVAL=30000
STORAGE_COMPRESSION=true

# Application settings
PORT=9000

# Example to enable persistence:
# ENABLE_STORAGE_PERSISTENCE=true
# STORAGE_AUTO_SAVE_INTERVAL=60000  # Auto-save every minute
# STORAGE_MAX_BACKUPS=5             # Keep 5 backup files
